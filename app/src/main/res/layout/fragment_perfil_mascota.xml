<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Imagen de perfil de la mascota -->
    <ImageView
        android:id="@+id/imgPerfilMascota"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/img_ronny" />

    <!-- Nombre de la mascota -->
    <TextView
        android:id="@+id/txtNombreMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ronny"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="8dp" />

    <!-- RecyclerView para mostrar las tarjetas de huesos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHuesos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:clipToPadding="false" />
</LinearLayout>
